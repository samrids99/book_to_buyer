
<%= form_tag(books_path, method: :get) do %>
  <%= text_field_tag(:search, params[:search], placeholder: "Search by title, author...") %>
  <%= submit_tag("Search", class: "search-button") %>
<% end %>
<br>
<%= link_to 'List your book', new_book_path, class: 'btn btn-primary' %>
<%= link_to "View Your Bookings", bookings_path, class: 'btn btn-primary' %>

<table data-controller="hello">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Genre</th>
      <th>Description</th>
      <th>User</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.author %></td>
        <td><%= book.genre %></td>
        <td><%= book.description %></td>
        <td><%= book.user.email %></td>
        <td>
          <% if book.cover_image.attached? %>
            <td><%= image_tag url_for(book.cover_image), height: "100", width: "100" %></td>
          <% else %>
            <td>No image available</td>
          <% end %>
        </td>
        <td>
          <%= button_to "Delete", book_path(book), method: :delete, class: "delete-button", data: { confirm: "Are you sure you want to delete this book?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
