<style>
  h1 {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 20px;
  }

  table {
    width: 100%;
    border-collapse: collapse;
  }

  th, td {
    padding: 8px 12px;
    border-bottom: 1px solid #ddd;
    text-align: left;
  }

  tr:nth-child(even) {
    background-color: #f2f2f2;
  }

  tr:hover {
    background-color: #ddd;
  }

  .delete-button {
    padding: 5px 10px;
    background-color: #dc3545;
    color: white;
    border: none;
    cursor: pointer;
    border-radius: 3px;
  }

    .search-button {
    padding: 8px 16px;
    background-color: #007bff; /* Blue color */
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }
</style>

<h1>Available Books</h1>

<%= form_tag(books_path, method: :get) do %>
  <%= text_field_tag(:search, params[:search], placeholder: "Search for books...") %>
  <%= submit_tag("Search", class: "search-button") %>
<% end %>
<br>
<%= link_to 'List your book', new_book_path, class: 'btn btn-primary' %>
<%= link_to "View Your Bookings", bookings_path, class: 'btn btn-primary' %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Genre</th>
      <th>Description</th>
      <th>User</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.author %></td>
        <td><%= book.genre %></td>
        <td><%= book.description %></td>
        <td><%= book.user.email %></td>
        <td>
          <%= button_to "Delete", book_path(book), method: :delete, class: "delete-button", data: { confirm: "Are you sure you want to delete this book?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
