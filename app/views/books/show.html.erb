<style>
  /* Table styles */
  table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 20px;
  }

  th, td {
    padding: 8px 12px;
    border-bottom: 1px solid #ddd;
    text-align: left;
  }

  th {
    font-weight: bold;
  }

  tr:nth-child(even) {
    background-color: #f2f2f2;
  }

  tr:hover {
    background-color: #ddd;
  }

  /* Book title styles */
  .book-title {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 20px;
  }

  /* Back to Books link styles */
  .back-to-books-link {
    color: blue;
    text-decoration: underline;
  }
</style>

<div class="book-container">
  <div class="book">
    <h2 class="book-title"><%= @book.title %></h2>
    <table>
      <tbody>s
        <tr>
          <td>Author:</td>
          <td><%= @book.author %></td>
        </tr>
        <tr>
          <td>Genre:</td>
          <td><%= @book.genre %></td>
        </tr>
        <tr>
          <td>Description:</td>
          <td><%= @book.description %></td>
        </tr>
        <tr>
          <td>Uploaded by:</td>
          <td><%= @book.user.email %></td>
        </tr>
      </tbody>
    </table>
    <%= link_to "Back to Books", books_path, class: "back-to-books-link" %>
  </div>
</div>
